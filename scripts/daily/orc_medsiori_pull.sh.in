#!/bin/bash

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

MEDPHOTODIR="/tmp/medphoto"
MEDPHOTOTEMP="$MEDPHOTODIR"/$8

#-------------------------------------------#
#    薬剤情報マスタ医薬品しおりダウンロード処理
#
#	引数より
#        $1  SRYCD 医薬品コード（９桁）
#        $2  TERMID
#        $3  JOBID 
#        $4  SHELLID
#
#	環境変数より
#        $5  MEDSIORISITE
#        $6  MEDPHOTOPATH
#        $7  MEDPHOTOTEMP
#
#        $8  HOSPNUM
#-------------------------------------------#

# 画像ファイル格納ディレクトリの作成

if ! [ -d $MEDPHOTODIR ]; then
  mkdir $MEDPHOTODIR
fi
if ! [ -d $MEDPHOTOTEMP ]; then
  mkdir $MEDPHOTOTEMP
fi

# センターサーバより雛型を取り込む
APS_EXEC_PATH=`dirname $0`
export APS_EXEC_PATH

MEDSIORIPARAM="$1,$2,$MEDSIORISITE,$MEDPHOTOPATH,$MEDPHOTOTEMP,$8"
export MEDSIORIPARAM
export MEDSIORIMONVER

$DBSTUB -dir $LDDIRECTORY -bd orcabt OrcSioriPull -parameter ""
	
$DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBJOB -parameter JBE$3$4,${8}

exit 
