#!/bin/sh

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

#-------------------------------------------#
#    月次統計データ作成
#        $1  TERMID 
#        $2  HOSPID
#        $3  HPSPCD   
#        $4  県番号
#        $5  SRYYM 
#        $6  NYUGAIKBN 
#        $7  FILENM1
#        $8  FILENM2 
#        $9  DATAKBN
#        ${10} HOUKATUKBN
#        ${11} KOJINKBN
#        ${12} CDKBN
#        ${13} JOBID
#        ${14} SHELLID
#        ${15} ERRFILENM
#        ${16} ファイル出力先区分（診療）
#        ${17} ファイル出力先区分（病名）
#        ${18} 端末ｉｐアドレス
#-------------------------------------------#
##      エラーファイル削除
	echo $#
        if  [ -e ${15} ]; then
            rm  ${15}
        fi
        
        rm  /var/tmp/TOKEI*
        
	    $DBSTUB -dir "$LDDEFDIR"/directory -bd orcabt ORCBT010 -parameter $1,$2,$4,$5,$6,$9,${10},${13},${14},${15}
        
        if  [ -e ${15} ]; then
            exit 
        else
	        $DBSTUB -dir "$LDDEFDIR"/directory -bd orcabt ORCBT020 -parameter $3,$5,$1,$9,${11},${13},${14},${15}
	    fi

        if  [ -e ${15} ]; then
            exit 
        else
	        $DBSTUB -dir "$LDDEFDIR"/directory -bd orcabt ORCBJOB -parameter JBE${13}${14} 
	    fi

#       漢字コード変換（ＥＵＣからシフトＪＩＳ）

        if  [ ${12} -eq '2' ]; then
            if   [ ${9} != '2' ]; then
                nkf -s /var/tmp/toukei01.dat > /tmp/$7
            fi 
            if   [ ${9} != '1' ]; then
                nkf -s /var/tmp/toukei02.dat > /tmp/$8
            fi 
        else
            if   [ ${9} != '2' ]; then
                cp  /var/tmp/toukei01.dat /tmp/$7
            fi 
            if   [ ${9} != '1' ]; then
                cp  /var/tmp/toukei02.dat /tmp/$8
            fi
        fi
#
        if   [ ${9} != '2' ]; then
             case ${16} in
                  1) 	$FDW -host ${18} -command jma-receipt-fd-write.sh /tmp/$7 $7
                        continue;;
                  2) 	$FDW -host ${18} -command jma-receipt-mo-write.sh /tmp/$7 $7
                        continue;;
                  3) 	$FDW -host ${18} -command jma-receipt-user1-write.sh /tmp/$7 $7
                        continue;;
                  4) 	$FDW -host ${18} -command jma-receipt-user2-write.sh /tmp/$7 $7
                        continue;;
                  5) 	$FDW -host ${18} -command jma-receipt-user3-write.sh /tmp/$7 $7
                        continue;;
             esac
        fi         
        if   [ ${9} != '1' ]; then
             case ${17} in
                  1) 	$FDW -host ${18} -command jma-receipt-fd-write.sh /tmp/$8 $8
                        continue;;
                  2) 	$FDW -host ${18} -command jma-receipt-mo-write.sh /tmp/$8 $8
                        continue;;
                  3) 	$FDW -host ${18} -command jma-receipt-user1-write.sh /tmp/$8 $8
                        continue;;
                  4) 	$FDW -host ${18} -command jma-receipt-user2-write.sh /tmp/$8 $8
                        continue;;
                  5) 	$FDW -host ${18} -command jma-receipt-user3-write.sh /tmp/$8 $8
                        continue;;
             esac
        fi         

	
        exit 
