INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_DATA = @INSTALL_DATA@

prefix = @prefix@
exec_prefix= @exec_prefix@
sysconfdir= @sysconfdir@
scriptsdir = ${exec_prefix}/scripts

noinst_shell_sources = \
		sample.sh.in \

shell_sources = \
		allways/site-upgrade.sh.in 

ruby_sources = \
		daily/print-data.rb.in \
		daily/print_parent2.rb.in \
		daily/print_parent.rb.in

shell_scripts = $(shell_sources:.sh.in=.sh) 

inst_scripts =  $(shell_sources:.sh.in=.sh) \
		allways/ORCBQ01.sh \
		allways/master_upgrade.sh \
		allways/orcbsd01.sh \
		allways/orcbse01.sh \
		allways/orcbsf01.sh \
		allways/orcbsf02.sh \
		allways/orcbsf03.sh \
		allways/orhcml09.sh \
		allways/print.sh \
		allways/tensu.sh \
		daily/HCALL.sh \
		daily/execoprg.sh \
		daily/HC01.sh \
		daily/HCALL2.sh \
		monthly/recept1.sh \
		monthly/recept2.sh \
		monthly/recept3.sh \
		monthly/recept4.sh \
		monthly/recept5.sh \
		monthly/recept6.sh \
		monthly/recept7.sh \
		monthly/recept8.sh \
		monthly/sokatsu.sh 

noinst_shell_scripts = $(noinst_shell_sources:.sh.in=.sh)

ruby_scripts = $(ruby_sources:.rb.in=.rb)

.SUFFIXES: .sh.in .sh .rb.in .rb

.sh.in.sh: 
	sed -e 's,\@jma-receipt-env\@,$(sysconfdir)\/jma-receipt\.env,g' \
	$< > $@

all:   \
	$(noinst_shell_scripts) \
	$(shell_scripts)

clean: 
	-rm $(noinst_shell_scripts)
	-rm $(shell_scripts)

distclean: clean
	-rm -f Makefile

install: all
	$(INSTALL) -d $(scriptsdir)
	$(INSTALL) -d $(scriptsdir)/allways
	$(INSTALL) -d $(scriptsdir)/daily
	$(INSTALL) -d $(scriptsdir)/monthly
	for file in $(inst_scripts) $(ruby_scripts); do \
	  dir=`echo "$$file" | sed -e 's,/[^/]*$$,,'`; \
	  $(INSTALL) $$file $(scriptsdir)/$$dir; \
	done
