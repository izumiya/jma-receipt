INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_DATA = @INSTALL_DATA@

prefix = @prefix@
exec_prefix= @exec_prefix@
scriptsdir = ${exec_prefix}/scripts

all:   
	touch build-stamp
clean: 
	-rm -f build-stamp

distclean: 
	-rm -f build-stamp
	-rm -f Makefile

install: all
	$(INSTALL) -d $(scriptsdir)
	$(INSTALL) -d $(scriptsdir)/allways
	$(INSTALL) -d $(scriptsdir)/daily
	$(INSTALL) -d $(scriptsdir)/monthly

	for file in allways/*sh ;do $(INSTALL) $$file $(scriptsdir)/allways; done
	for file in daily/*sh ;do $(INSTALL) $$file $(scriptsdir)/daily; done
	for file in monthly/*sh ;do $(INSTALL) $$file $(scriptsdir)/monthly; done
