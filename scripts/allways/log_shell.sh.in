#!/bin/bash

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

RBDIR=${SCRIPTSDIR}/allways
[ -e ${PATCHSCRIPTSDIR}/allways/mask.rb ] && RBDIR=${PATCHSCRIPTSDIR}/allways
[ -e ${SITESCRIPTSDIR}/allways/mask.rb ]  && RBDIR=${SITESCRIPTSDIR}/allways

LOG="/var/log/jma-receipt/shell.log"
LOGGZ=${LOG}.gz

if [ -f ${LOGGZ} ];  then
    if [ $(stat -c "%s" ${LOGGZ}) -ge 5242880 ] ; then
	mv ${LOGGZ}  ${LOGGZ}.0
	for NUM in $(seq 5 -1 1)
	do
	  NEWLOG="${LOGGZ}.${NUM}"
	  NUM=$(expr ${NUM} - 1)
	  OLDLOG="${LOGGZ}.${NUM}"
	  echo mv ${OLDLOG} ${NEWLOG}
	  mv ${OLDLOG} ${NEWLOG} 2>/dev/null
	done
    fi
fi

echo $(date +"%Y-%m-%d %H:%M:%S") $(printf "[%s]" "$@") | nkf -e | $RBDIR/mask.rb | gzip -c >> ${LOGGZ}

