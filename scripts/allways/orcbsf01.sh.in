#!/bin/sh

if test -n "@jma-receipt-env@" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV
#-------------------------------------------#
#    バックアップ処理
#        $1   TABLE-NAME
#        $2   CNV-NAME
#        $3   OUT-NAME-WK
#        $4$5 OUT-NAME
#        $6   KBEN
#-------------------------------------------#
##

        if  [ $6 -ne 1 ]; then
            if  [ -e $4$5 ]; then
                rm  $4$5
            fi
            pg_dump -R -t $1 $DBNAME > $4$5
        else
            pg_dump -R -t $1 $DBNAME > /tmp/$2.out
            cat  /tmp/$2.out  /tmp/$3.out  >  $4$5
            rm   /tmp/$2.out
        fi

        cat  $4$5  >  /tmp/$3.out
