#!/bin/sh

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

ORCASCRIPT=$ORCA_DIR/scripts/claim/rb
#-------------------------------------------#
#        $1 KBN        X(01)
#        $2 PTID       9(10)
#        $3 SRYKA      X(02)      
#        $4 TIME       X(06) 
#        $5 HOSPID     X(24)
#        $6 IP-ADDRESS X(05)
#        $7 PORT       X(05)
#-------------------------------------------#
        $DBSTUB -dir "$LDDEFDIR"/directory -bd orcabt ORCL0010 -parameter $1,$2,$3,$4,$5,END 

#-------------------------------------------#
# Add Start (2001/08/27)
#-------------------------------------------#
# Make XML File Script Execute
#   orca_layout_front.def - Layout Define File
#   claim$2$3.txt         - Input Sequential File
#   orca_base_front.xml   - Template XML File
#   orca_send_front.xml   - Output XML File
  cd $ORCASCRIPT
     ./orca_make_xml.rb ../def/orca_layout_front.def /var/tmp/claim$2$3.txt ../template/orca_base_front.xml >/var/tmp/claim_send_front$2$3.xml
#-------------------------------------------#
# Add End
#-------------------------------------------#

#-------------------------------------------#
# Add Start (2001/10/29)
#-------------------------------------------#
if [ $1 = "1" ]
  then
    # --- to EUC  ---
	./clm_snd.rb $6 $7 /var/tmp/claim_send_front$2$3.xml euc 
elif [ $1 = "2" ]
  then
    # --- to SJIS  ---
	./clm_snd.rb $6 $7 /var/tmp/claim_send_front$2$3.xml sjis 
elif [ $1 = "3" ]
  then
    # --- to UTF-8 ---
	./clm_snd.rb $6 $7 /var/tmp/claim_send_front$2$3.xml u8
fi
	rm /var/tmp/claim*$2$3*
#-------------------------------------------#
# Add End
#-------------------------------------------#
        exit 
