#! /bin/sh
#
# Project code name "ORCA"
# 日医標準レセプトソフト(JMA standard receipt software)
#
# Copyright(C) 2002 JMA(Japan Medical Association)
#
# CREATE: 20020227
#
#
# 医療機関ＩＤリセット
#
#
if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV" ; then
    exit 0
fi

. $JMARECEIPT_ENV

if [ ! ${DBNAME} ]; then
    echo "\$DBNAME: undef"
    exit 1
fi

if [ $# -ne 2 ]; then
    echo
    echo "usage: sudo -u orca sh /usr/lib/jma-receipt/bin/jma-receipt-hospid-set.sh <hospnum> <hospid>"
    echo
    exit 1
fi

if [ $# -eq 2 ]; then
    HOSPNUM="$1"
    HOSPID="$2"
else
    HOSPNUM="01"
    HOSPID="JPN000000000000"
fi

echo
echo "医療機関識別番号 ${HOSPNUM} の医療機関ＩＤを設定します"
echo

while [ "$OKFLG" != "Y" ] && [ "$OKFLG" != "y" ]
do
    echo
    echo -n "これでよければそのまま Enter キーを押してください " $HOSPID ": "

    read LASTHOSPID
    if [ -z $LASTHOSPID ] ;then
	LASTHOSPID="$HOSPID"
    else
	HOSPID="$LASTHOSPID"
    fi
    echo
    echo    "          ----*----*----* (15桁)"
    echo -n "HOSPID = " $LASTHOSPID " [ y/N ]: "
    read OKFLG
done

if [ ! 15 = `echo -n $LASTHOSPID | wc -c` ]; then
  echo "１５桁で入力されていません。処理を終了します。"
  exit 1
fi

echo 
echo "${DBNAME} データベースの医療機関ＩＤをセットします"
for f in `echo "SELECT pg_class.relname FROM pg_class, pg_attribute WHERE  pg_class.relkind = 'r'  and pg_attribute.attnum > 0 and pg_attribute.attrelid = pg_class.oid and pg_attribute.attname = 'hospid';" | psql ${DBNAME} | grep 'tbl'` ; do
	echo "$f ------------"
	echo "update $f set hospid = '$LASTHOSPID' and hospnum = $HOSPNUM;" | psql ${DBNAME}
	echo "---------------------"
done

echo
echo "システム管理テーブルの医療機関ＩＤをセットします"
echo "update tbl_syskanri set kanritbl = substr(kanritbl,1,11) || '$LASTHOSPID' || '         ' || substr(kanritbl,36,465) where kanricd = '1001' and hospnum = $HOSPNUM;" | psql ${DBNAME}

echo
echo "vacuum 処理を行います"
echo "vacuum analyze;" | psql ${DBNAME}

#
# 処理終了
#
echo
echo "処理はすべて終了しました"
exit 0
