INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

prefix = @prefix@
exec_prefix= @exec_prefix@
sysconfdir = @sysconfdir@

top_srcdir = @top_srcdir@

ORCA_DIR = ${exec_prefix}

docdir = ${ORCA_DIR}/doc
datadir = ${ORCA_DIR}/data
formdir = ${ORCA_DIR}/form
initdir = ${ORCA_DIR}/init
lddefdir = ${ORCA_DIR}/lddef
recorddir = ${ORCA_DIR}/record
screendir = ${ORCA_DIR}/screen
scriptsdir = ${ORCA_DIR}/scripts

SUBDIRS = cobol lddef record screen form scripts doc data etc init

all:   
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i all; done
filecheck:   
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i filecheck; done
clean: 
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i clean; done

distclean: 
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i distclean; done
	-rm -f Makefile
	-rm -f config.cache config.log config.status


install installdirs:
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i $@; done

install-copys install-copydirs: 
	$(MAKE) -C cobol $@
