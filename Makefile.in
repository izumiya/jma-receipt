INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

prefix = @prefix@
exec_prefix= @exec_prefix@
sysconfdir = @sysconfdir@

top_srcdir = @top_srcdir@

docdir = ${prefix}/doc

datadir = ${exec_prefix}/data
formdir = ${exec_prefix}/form
initdir = ${exec_prefix}/init
lddefdir = ${exec_prefix}/lddef
recorddir = ${exec_prefix}/record
screendir = ${exec_prefix}/screen
scriptsdir = ${exec_prefix}/scripts

SUBDIRS = cobol lddef record screen form scripts doc data etc init

all:   
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i all; done
clean: 
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i clean; done

distclean: 
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i distclean; done
	-rm -f Makefile

install installdirs:
	@set -e; for i in $(SUBDIRS); do $(MAKE) -C $$i $@; done

install-copys install-copydirs: 
	$(MAKE) -C cobol $@
