top_srcdir = @top_srcdir@
include $(top_srcdir)/Makefile.directories

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

ETC_files = \
	kentan.inc \
	orcadbs.inc \
	jma-receipt.env \
	jma-receipt.conf \
	jma-receipt-crontab \
	ORCADC.PARA

DBGROUP_files = dbgroup.inc 

jma-receipt-crontab: jma-receipt-crontab.in
	sed -e "s|@SCRIPTSDIR@|${scriptsdir}|" \
	-e "s|@PATCHSCRIPTSDIR@|${PATCHSCRIPTSDIR}|" \
	-e "s|@SITESCRIPTSDIR@|${SITESCRIPTSDIR}|" $< > $@

all: jma-receipt-crontab

filecheck:

clean:
	-rm -f jma-receipt-crontab

distclean:
	-rm -f jma-receipt-crontab
	-rm -f jma-receipt.env
	-rm -f Makefile

install: all
	$(INSTALL) -d $(sysconfdir)
	$(INSTALL_DATA) $(ETC_files) $(sysconfdir)
	$(INSTALL) -m 600 $(DBGROUP_files) $(sysconfdir)
