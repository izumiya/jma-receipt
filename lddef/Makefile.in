INSTALL = @INSTALL@
CP = cp

prefix = @prefix@
exec_prefix= @exec_prefix@
orcadir = ${exec_prefix}/orca
lddefdir = ${orcadir}/lddef
install_ignore := Makefile.in Makefile build-stamp

all:   
	touch build-stamp
clean: 
	-rm -f build-stamp

distclean: 
	-rm -f build-stamp
	-rm -f Makefile

install: all
	$(INSTALL) -d $(lddefdir)
	$(CP) * $(lddefdir)/ ;\
	for i in $(install_ignore) ;do rm -f $(lddefdir)/$$i; done
