INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_DATA = @INSTALL_DATA@


prefix = @prefix@
exec_prefix= @exec_prefix@
sysconfdir= @sysconfdir@
ORCA_DIR = @exec_prefix@
initdir = ${ORCA_DIR}/init

EXTRA_DIST = \
             orca_dbkanri_orig.dump \
             orca_user.dump

init_sources = \
        orca-db-create.sh \
        orca-db-install.sh

init_scripts = $(init_sources:.sh.in=.sh)

.SUFFIXES: .sh.in .sh

.sh.in.sh: 
	sed -e 's,\@jma-receipt-env\@,$(sysconfdir)\/jma-receipt\.env,g' \
	$< > $@

all:   $(init_scripts)

filecheck:

clean: 
	-rm -f build-stamp

distclean: 
	-rm -f build-stamp
	-rm -f Makefile

install: all
	$(INSTALL) -d $(initdir)
	$(INSTALL_SCRIPT) $(init_scripts) $(initdir)
	$(INSTALL_DATA) $(EXTRA_DIST) $(initdir)

