tbl_tnkrrk {
	HOSPID				char(24);
	PTID				number(10,0);
	STYMD	    		char(8);
	EDYMD			    char(8);
	TERMID  			varchar(16);
	OPID    			varchar(16);
	CREYMD  			char(8);
	UPYMD    			char(8);
	UPHMS				char(6);
#-----> 主キー更新用項目
	UPHOSPID			char(24),virtual;
	UPPTID 				number(10,0),virtual;
	UPSTYMD			    char(8),virtual;
};
primary	{
	HOSPID,PTID,STYMD;
};

path	key 	{
	DBSELECT	{
		DECLARE tbl_tnkrrk_key_csr CURSOR FOR
		SELECT *
		FROM tbl_tnkrrk
			WHERE   HOSPID    =   :HOSPID
			AND   PTID        =   :PTID
			AND   STYMD       =   :STYMD
		;
	};
};

path	key2 	{
	DBSELECT	{
		DECLARE tbl_tnkrrk_key2_csr CURSOR FOR
		SELECT *
		FROM tbl_tnkrrk
			WHERE   HOSPID    =   :HOSPID
			AND   PTID        =   :PTID
		;
	};
};

path	key3 	{
	DBSELECT	{
		DECLARE tbl_tnkrrk_key3_csr CURSOR FOR
		SELECT *
		FROM tbl_tnkrrk
			WHERE   HOSPID    =   :HOSPID
			AND   PTID        =   :PTID
			ORDER   BY        STYMD  DESC
		;
	};
};
path	del11 	{
	DBDELETE	{
		DELETE
		FROM tbl_tnkrrk
			WHERE   HOSPID    =   :HOSPID
			AND   PTID        =   :PTID
		;
	};
};

path	upd1	{ 	
	DBUPDATE	{
		UPDATE	tbl_tnkrrk 
				SET	
#					:*
                   HOSPID              = :HOSPID,
                   PTID                = :PTID,
                   STYMD               = :STYMD,
                   EDYMD               = :EDYMD,
                   TERMID              = :TERMID,
                   OPID                = :OPID,
                   CREYMD              = :CREYMD,
                   UPYMD               = :UPYMD,
                   UPHMS               = :UPHMS
               WHERE   HOSPID      =   :UPHOSPID
                 AND   PTID        =   :UPPTID
                 AND   STYMD       =   :UPSTYMD
		;
	};
};

path	all 	{
	DBSELECT	{
		DECLARE tbl_tnkrrk_all_csr CURSOR FOR
		SELECT *
		FROM tbl_tnkrrk
 		;
	};
};

