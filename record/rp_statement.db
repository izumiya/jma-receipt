rp_statement {
	context	int;
	object	object;
	mode	int;
	recordname	varchar(128);
	data {
		Report_ID				varchar(30);
		Custom_ID				varchar(30);
		Printer					varchar(20);
		Patient	{
			ID	 				    varchar(20);
			Name 				    varchar(50);
			KanaName  			varchar(50);
		};
		Hospital	{
			Name								varchar(120)[3];
			Zipcode         		varchar(7);
			Address							varchar(200)[3];
			PhoneNumber					varchar(15);
		};
		Statement {
			Perform_Date	{
				First		varchar(10);
				Last		varchar(10);
			};
			Department_Name			varchar(20);
			Insurance_Name			varchar(20);
			IssuedDate					varchar(10);
			Invoice_Number			varchar(7);
			Detail{
				Group_Number				varchar(3);
				Medical_Class_Name	varchar(10);
				Description 				varchar(76);
				AddingYen_Flg				varchar(01);
				Point								varchar(10);
				Count								varchar(3);
				Total_Point					varchar(10);
			}[500];
		}[100];
		Yen_Flg									varchar(1);
		Caution									varchar(100);
	};
};
