tbl_medyakko {
	IYAKUHINCD		char(9);
	RENNUM			number(4);
	TEKIOUBYOMEI		varchar(400);
	BYOMEICDSU		number(2);
	BYOMEICD_1		char(7);
	BYOMEICD_2		char(7);
	BYOMEICD_3		char(7);
	BYOMEICD_4		char(7);
	BYOMEICD_5		char(7);
	BYOMEICD_6		char(7);
	BYOMEICD_7		char(7);
	BYOMEICD_8		char(7);
	BYOMEICD_9		char(7);
	BYOMEICD_10		char(7);
	BYOMEICD_11		char(7);
	BYOMEICD_12		char(7);
	BYOMEICD_13		char(7);
	BYOMEICD_14		char(7);
	BYOMEICD_15		char(7);
	BYOMEICD_16		char(7);
	BYOMEICD_17		char(7);
	BYOMEICD_18		char(7);
	BYOMEICD_19		char(7);
	BYOMEICD_20		char(7);
	BYOMEICD_21		char(7);
	BYOMEIHENFLG		char(1);
	CREYMD			char(8);
#-----> 検索キー用項目
	SELNAME		char(200),virtual;
	SELYUKOSTYMD  		char(8);
	SELYUKOEDYMD  		char(8);
};
primary	{
	IYAKUHINCD,RENNUM;
};

path	key 	{
	DBSELECT	{
		DECLARE tbl_medyakko_key_csr CURSOR FOR
		SELECT *
		FROM tbl_medyakko
			WHERE   IYAKUHINCD	=	:IYAKUHINCD
			AND	RENNUM		=	:RENNUM
		;
	};
};
path	key2 	{
	DBSELECT	{
		DECLARE tbl_medyakko_key2_csr CURSOR FOR
		SELECT *
		FROM tbl_medyakko
			WHERE   IYAKUHINCD	=	:IYAKUHINCD
			ORDER   BY  RENNUM
		;
	};
};

path	key3 	{
	DBSELECT	{
		DECLARE tbl_medyakko_key3_csr CURSOR FOR
		SELECT *
		FROM tbl_medyakko
			WHERE   IYAKUHINCD	=	:IYAKUHINCD
			AND   TEKIOUBYOMEI       LIKE   :TEKIOUBYOMEI
		;
	};
};

path	key4	{ 	
	DBSELECT	{
		DECLARE tbl_medyakko_key4_csr CURSOR FOR
		SELECT A.* FROM tbl_medyakko A,TBL_TENSU B
		WHERE  A.RENNUM	       = 1
		AND    B.SRYCD         = A.IYAKUHINCD
		AND    B.YUKOSTYMD    <= :SELYUKOSTYMD
		AND    B.YUKOEDYMD    >= :SELYUKOEDYMD
		AND	(B.NAME      LIKE :SELNAME
		 OR	 B.KANANAME  LIKE :SELNAME)
		ORDER BY B.KANANAME,A.IYAKUHINCD
		;
	};
};

path	all 	{
	DBSELECT	{
		DECLARE tbl_medyakko_all_csr CURSOR FOR
		SELECT *
		FROM tbl_medyakko
		;
	};
};
