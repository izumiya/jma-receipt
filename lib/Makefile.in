top_srcdir = @top_srcdir@
include $(top_srcdir)/Makefile.directories

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@

ruby_scripts = \
	ruby/plugin.rb \
	ruby/plugin/db.rb \
	ruby/plugin/manager.rb \
	ruby/plugin/store.rb \
	ruby/plugin/util.rb

all:

filecheck:
	@(for i in $(ruby_scripts) ;do echo "make	`basename $${i}`"; done ; \
	find . \
	-name "." -o \
	-name "CVS" -prune -o \
	-name "Makefile*" -o \
	-name ".cvsignore" -o \
	-name "*.bak" -o \
	-name "ruby" -o \
	-name "plugin" -o \
	-printf "file\t%f\n") \
	|sort -k2 |uniq -u -f1

clean: 

distclean: clean
	-rm -f Makefile

install: all
	$(INSTALL) -d $(libdir)
	$(INSTALL) -d $(libdir)/ruby
	$(INSTALL) -d $(libdir)/ruby/plugin
	for file in $(ruby_scripts); do \
	  dir=`echo "$$file" | sed -e 's,/[^/]*$$,,'`; \
	  $(INSTALL) $$file $(libdir)/$$dir; \
	done
