INSTALL = @INSTALL@
CP = cp

prefix = @prefix@
exec_prefix= @exec_prefix@
orcadir = ${exec_prefix}/orca
screendir = ${orcadir}/screen
install_ignore := Makefile.in Makefile build-stamp
all:   
	touch build-stamp
clean: 
	-rm -f build-stamp

distclean: 
	-rm -f build-stamp
	-rm -f Makefile

install: all
	$(INSTALL) -d $(screendir)
	$(CP) * $(screendir)/ ;\
	for i in $(install_ignore) ;do rm -f $(screendir)/$$i; done
