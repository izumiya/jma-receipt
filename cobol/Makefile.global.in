prefix = @prefix@
exec_prefix= @exec_prefix@

sysconfdir = @sysconfdir@

docdir = ${prefix}/doc

datadir = ${exec_prefix}/data
formdir = ${exec_prefix}/form
initdir = ${exec_prefix}/init
lddefdir = ${exec_prefix}/lddef
recorddir = ${exec_prefix}/record
screendir = ${exec_prefix}/screen
scriptsdir = ${exec_prefix}/scripts
libdir  = @libdir@



COBOL = @COBC@
INSTALL = @INSTALL@
MKDIR = mkdir -p
COBOLFLAGS =  -m -dynamic
EXEC_COBOLFLAGS = -dynamic
DEPDIR = .deps

copydir = ../copy

OBJS = ${SRCS:.CBL=.so}
EXEC = ${EXEC_SRCS:.CBL=}

define postprocess-depend
@if test ! -d $(DEPDIR); then mkdir $(DEPDIR); fi
endef

%.so: %.CBL
	$(postprocess-depend)
	$(COBOL) $(COBOLFLAGS) -I $(copydir) -MT $@ -MF $(DEPDIR)/${@:.so=.Po} $< 
	
%: %.CBL
	$(postprocess-depend)
	$(COBOL) $(EXEC_COBOLFLAGS) -I $(copydir) -MT $@ -MF $(DEPDIR)/${@:=.Po} $<

all: $(OBJS) $(EXEC)

clean: 
	-rm -f $(OBJS) $(EXEC)

distclean: 
	-rm -f $(OBJS) $(EXEC)
	-rm -R $(DEPDIR)


install: all
	-@if [ ! -d $(libdir) ]; then \
	  $(MKDIR) $(libdir); \
	fi
	for f in $(OBJS) $(EXEC); do \
	  $(INSTALL) -m 555 $${f} $(libdir) ; done

-include $(wildcard $(DEPDIR)/*.Po) /dev/null
