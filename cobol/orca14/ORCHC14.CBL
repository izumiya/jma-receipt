           IF     (ORCHC14-SRYNAIYO    =   "00"  )  OR
                  (ORCHC14-DRCD        =   "9999")
               MOVE    "key5"          TO  WRK-PATH
           ELSE
               MOVE    "key3"          TO  WRK-PATH
           END-IF
      *
           MOVE    YYK-REC             TO  MCPDATA-REC
           MOVE    "tbl_yyk"           TO  MCP-TABLE
           MOVE    WRK-PATH            TO  MCP-PATHNAME
           PERFORM 910-DBSELECT-SEC
           IF      MCP-RC              =   ZERO
               MOVE    "tbl_yyk"           TO  MCP-TABLE
               MOVE    WRK-PATH            TO  MCP-PATHNAME
               PERFORM 900-YOYAKU-READ-SEC
           ELSE
               MOVE    1               TO  FLG-YYK
           END-IF
           MOVE    ZERO                TO  IDX
           INITIALIZE                  HC14
           PERFORM
                   UNTIL       FLG-YYK     =   1
               MOVE    ZERO                TO  FLG-SYORI
               IF     (ORCHC14-SRYNAIYO    =   "00"  )  OR
                      (ORCHC14-DRCD        =   "9999")
                   IF      ORCHC14-SRYNAIYO    NOT =   "00"
                       IF      ORCHC14-SRYNAIYO    =  YYK-SRYNAIYO
                           MOVE    1               TO  FLG-SYORI
                       END-IF
                   END-IF
                   IF      ORCHC14-DRCD        NOT =   "9999"
                       IF      ORCHC14-DRCD-G      =  YYK-DRCD
                           MOVE    1               TO  FLG-SYORI
                       END-IF
                   END-IF
                   IF     (ORCHC14-SRYNAIYO    =   "00"  )  AND
                          (ORCHC14-DRCD        =   "9999")
                       MOVE    1               TO  FLG-SYORI
                   END-IF
               ELSE
                   MOVE    1               TO  FLG-SYORI
               END-IF
      *        キーデータは対象外
               IF     (YYK-YYKID           =   ZERO )
                   MOVE    ZERO                TO  FLG-SYORI
               END-IF
      *
               IF      FLG-SYORI           =   1
                   IF      (ORCHC14-KBN        =   "1"     )  OR
                          ((ORCHC14-KBN        =   "2"  ) AND
                           (YYK-RAIINZUMI      =   SPACE ))
